<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <NikcioUHeadlessCoreUmbracoContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Nikcio.UHeadless\**\*.*</NikcioUHeadlessCoreUmbracoContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyNikcioUHeadlessCoreUmbracoAssets" BeforeTargets="Build">
        <ItemGroup>
            <NikcioUHeadlessCoreUmbracoContentFiles Include="$(NikcioUHeadlessCoreUmbracoContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Nikcio.UHeadless files: $(NikcioUHeadlessCoreUmbracoContentFilesPath) - #@(NikcioUHeadlessCoreUmbracoContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(NikcioUHeadlessCoreUmbracoContentFiles)"
            DestinationFiles="@(NikcioUHeadlessCoreUmbracoContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Nikcio.UHeadless\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />
    </Target>

    <Target Name="ClearNikcioUHeadlessCoreUmbracoAssets" BeforeTargets="Clean">
        <ItemGroup>
            <NikcioUHeadlessCoreUmbracoDir Include="$(MSBuildProjectDirectory)\App_Plugins\Nikcio.UHeadless\" />
        </ItemGroup>
        <Message Text="Clear old Nikcio.UHeadless data"  Importance="high" />
        <RemoveDir Directories="@(NikcioUHeadlessCoreUmbracoDir)"  />
    </Target>

</Project>
